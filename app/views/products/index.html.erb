<div class="row mb-4">
  <div class="col">
    <h1>Products</h1>
  </div>
  <div class="col text-end">
    <%= link_to 'Sell', new_product_path, class: 'btn btn-primary' if user_signed_in? %>
  </div>
</div>

<div class="row mb-4">
  <div class="col">
    <%= form_tag products_path, method: :get, class: 'row g-3' do %>
      <div class="col-md-2">
        <%= select_tag :brand, 
            options_for_select(['', 'Apple', 'Samsung', 'Dell', 'Nike', 'Adidas'], selected: params[:brand]),
            class: 'form-select',
            prompt: 'Select Brand' %>
      </div>
      <div class="col-md-2">
        <%= select_tag :condition,
            options_for_select(['', 'New', 'Used', 'Refurbished'], selected: params[:condition]),
            class: 'form-select',
            prompt: 'Select Condition' %>
      </div>
      <div class="col-md-2">
        <%= number_field_tag :min_price, params[:min_price], 
            class: 'form-control',
            placeholder: 'Min Price' %>
      </div>
      <div class="col-md-2">
        <%= number_field_tag :max_price, params[:max_price], 
            class: 'form-control',
            placeholder: 'Max Price' %>
      </div>
      <div class="col-md-2">
        <%= submit_tag 'Filter', class: 'btn btn-secondary' %>
      </div>
    <% end %>
  </div>
</div>

<div class="row row-cols-1 row-cols-md-3 g-4">
  <% @products.each do |product| %>
    <div class="col">
      <div class="card h-100">
        <% if product.image.attached? %>
          <%= image_tag product.image, class: "card-img-top", style: "height: 200px; object-fit: cover;" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= link_to product.title, product_path(product), class: "text-decoration-none" %></h5>
          <p class="card-text">
            <small class="text-muted">
              <%= product.brand %> <%= product.model %> â€¢ <%= product.condition %>
            </small>
          </p>
          <p class="card-text"><%= truncate(product.description, length: 100) %></p>
          <h6 class="card-subtitle mb-2 text-success">
            <%= number_to_currency(product.price) %>
          </h6>
          <p class="card-text">
            <small class="text-muted">Seller: <%= product.user.name %></small>
          </p>
        </div>
        <div class="card-footer bg-transparent">
          <% if user_signed_in? && product.user == current_user %>
            <%= link_to 'Edit', edit_product_path(product), class: 'btn btn-sm btn-outline-secondary' %>
            <%= link_to 'Delete', product_path(product),
                data: { turbo_method: :delete, turbo_confirm: 'Are you sure?' },
                class: 'btn btn-sm btn-outline-danger' %>
          <% else %>
            <%= button_to add_item_cart_path(product_id: product), 
                class: 'btn btn-sm btn-success' do %>
              <i class="bi bi-cart-plus"></i> Add to Cart
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

