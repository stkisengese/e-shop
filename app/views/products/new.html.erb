<!-- app/views/products/new.html.erb -->
<article>
  <h1>Create New Product</h1>

  <%= form_with(model: @product, local: true) do |f| %>
    <% if @product.errors.any? %>
      <div>
        <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>
        <ul>
          <% @product.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
      <%= f.label :brand %>
      <%= f.select :brand, ['Apple', 'Samsung', 'Dell', 'Nike', 'Adidas'], prompt: 'Select Brand' %>
    </div>

    <div>
      <%= f.label :model %>
      <%= f.text_field :model %>
    </div>

    <div>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div>
      <%= f.label :condition %>
      <%= f.select :condition, ['New', 'Used', 'Refurbished'], prompt: 'Select Condition' %>
    </div>

    <div>
      <%= f.label :color %>
      <%= f.text_field :color %>
    </div>

    <div>
      <%= f.label :price %>
      <%= f.number_field :price, step: 0.01 %>
    </div>

    <%= f.submit %>
  <% end %>

  <%= link_to 'Back to Products', products_path %>
</article>
